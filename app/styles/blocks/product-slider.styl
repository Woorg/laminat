.product-slider-wrap
	width 301px
.product-slider
	margin-bottom 16px
	&-i
		width 300px
		height 300px
		margin 2px
		padding 7px
		background #FFF
		box-shadow 0 1px 3px 0 rgba(49,39,28,.1)
		border-radius 5px
		&-label
			position absolute
			top -10px
			left -11px
			text-indent -9999px
			sprite($label-1)
		&-img
			position relative
			img
				width 286px
				height 286px
			&-icon
				position absolute
				bottom 5px
				left 5px
				width 34px
				height 34px
				background rgba(46,46,46,.69) 
				border-radius 3px
				&-zoom
					position absolute
					top 50%
					left 50%
					margin-top -7px
					margin-left -7px
					display block
					sprite($zoom-small)
	&-thumb
		margin-bottom 33px
		margin-right -17px
		overflow hidden
		&-i
			margin-right 17px
			padding 2px 
			float left
			width 62px
			height 62px
			border 2px solid transparent
			background #FFF
			border-radius 3px
			box-shadow 0 1px 3px 0 rgba(49,39,28,.1) 
			&-img
				img
					width 54px
					height 54px
		.active
			border 2px solid $orange
				


	


