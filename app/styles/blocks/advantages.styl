.advantages
	margin-bottom 47px
	padding-top 50px
	font-size 0
	cleafix()
	&-i
		position relative
		margin-left 0
		padding-left 73px
		width 25%
		display inline-block
		&:first-child
			margin-left 0
		&-icon
			position absolute
			top 0
			left 0
			display block
		&-title
			margin-bottom 8px
			font-weight 600
			font-size 18px
			text-transform uppercase
		&-text
			font-size 13px
			color $gray
	&-1
		.advantages-i-icon
			top 4px
			sprite($delivery-icon)
	&-2
		padding-left 82px 
		.advantages-i-icon
			top -3px
			left 14px 
			sprite($guarantee2-icon)
	&-3
		padding-left 96px 
		.advantages-i-icon
			top 0
			left 30px 
			sprite($price-tag)
	&-4
		padding-left 98px 
		.advantages-i-icon
			top -2px
			left 33px  
			sprite($return-icon)


