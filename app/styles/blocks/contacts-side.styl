.contacts-side
	padding-top 7px
	width 360px
	float right
	&-form
		padding 19px 15px 16px 
		background #fff
		-webkit-border-radius 3p x
		border-radius 3px
		box-shadow 0 1px 3px 0 rgba(49,39,28,.1)
		&-title
			margin-bottom 10px
			font-size 20px
			font-weight 700 
		&-text
			margin-bottom 21px
			color #8e8e8e 
			line-height 18px
		&-form
			&-input
				margin-bottom 27px
				-webkit-border-radius 3px
				border-radius 3px
				input
					border 1px solid #bdbdbd
					padding 0 16px 
					background #fff
					width 100%
					height 44px 
					line-height 42px
					font-size 12px
					color #BDBDBD 
					-webkit-border-radius 3px 
					border-radius 3px 
			&-textarea
				margin-bottom 15px
				-webkit-border-radius 3px
				border-radius 3px
				textarea
					border 1px solid #bdbdbd 
					padding 8px 16px
					width 100%
					min-height 155px
					background #fff
					font-size 12px
					color #BDBDBD 
					-webkit-border-radius 3px
					border-radius 3px
			&-submit
				input
					border 1px solid $orange
					min-width 192px 
					height 54px
					background  $orange
					font-size 20px
					font-weight 600 
					color #fff
					-webkit-border-radius 3px
					border-radius 3px
		